{
    "compilerOptions": {
      "target": "ES2020",                      // Use modern JavaScript features
      "module": "CommonJS",                   // Use CommonJS for compatibility with Node.js
      "rootDir": "./src",                     // Specify the root directory of TypeScript source files
      "outDir": "./dist",                     // Output directory for compiled JavaScript files
      "strict": true,                         // Enable all strict type-checking options
      "moduleResolution": "node",            // Resolve modules using Node.js resolution logic
      "esModuleInterop": true,               // Enable interoperability for CommonJS modules
      "noImplicitReturns": true,             // Ensure all code paths in a function return a value
      "resolveJsonModule": true,             // Allow importing JSON files as module
     
    },
    "include": [
      "src/**/*"
    ],                      // Include all files in the `src` folder
    "exclude": ["node_modules"]      // Exclude unnecessary directories
  }
  